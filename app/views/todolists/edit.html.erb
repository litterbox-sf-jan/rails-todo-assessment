<% if @todolist.errors.any? %>
  <% @todolist.errors.full_messages.each do |error| %>
    <p class="text-danger">
      <%= error%>
    </p>
  <% end %>
<% end %>

<%= form_for @todolist, url: todolist_path do |f|%>
    <p>
      <%= f.label :title%>
      <%= f.text_field :title, autofocus: true%>
    </p>
    <p>
      <%= f.label :description%>
      <%= f.text_area :description%>
    </p>
    <p>
      <%= f.submit%>
    </p>
<% end %>